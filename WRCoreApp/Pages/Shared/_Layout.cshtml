<!--HTML Preprocessing -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- HTML meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WRCoreApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WRCoreApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Link back to home page-->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Brad Jewett</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navigation bar items-->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path.Value == "/Objective" ?"nav-item-selected" : "")" asp-area="" asp-page="/Objective">Objective</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path.Value == "/Experience" ?"nav-item-selected" : "")" asp-area="" asp-page="/Experience">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path.Value == "/Skills" ?"nav-item-selected" : "")" asp-area="" asp-page="/Skills">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path.Value == "/Projects" ?"nav-item-selected" : "")" asp-area="" asp-page="/Projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path.Value == "/About" ?"nav-item-selected" : "")" asp-area="" asp-page="/About">About Me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <!--Render rest of Site Body (index.cshtml)-->
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 Brad Jewett - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>